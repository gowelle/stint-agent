{
  "name": "@gowelle/stint-agent",
  "version": "1.2.15",
  "description": "Local agent for Stint - Project Assistant",
  "author": "Gowelle John <gowelle.john@icloud.com>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "stint": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gowelle/stint-agent.git"
  },
  "homepage": "https://github.com/gowelle/stint-agent#readme",
  "bugs": {
    "url": "https://github.com/gowelle/stint-agent/issues"
  },
  "keywords": [
    "stint",
    "agent",
    "project-assistant",
    "cli",
    "git"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "test": "vitest",
    "test:update": "node --loader ts-node/esm scripts/test-update.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "dotenv": "^17.2.3",
    "ink": "^5.2.1",
    "node-fetch": "^3.3.2",
    "node-notifier": "^10.0.1",
    "open": "^10.0.0",
    "ora": "^8.0.1",
    "react": "^18.3.1",
    "simple-git": "^3.22.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-notifier": "^8.0.5",
    "@types/react": "^18.3.27",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "stint": {
    "channels": {
      "stable": {
        "pattern": "^\\d+\\.\\d+\\.\\d+$",
        "description": "Production-ready releases"
      },
      "beta": {
        "pattern": "^\\d+\\.\\d+\\.\\d+-beta\\.\\d+$",
        "description": "Pre-release versions for testing"
      },
      "nightly": {
        "pattern": "^\\d+\\.\\d+\\.\\d+-nightly\\.\\d{8}$",
        "description": "Nightly builds from main branch"
      }
    },
    "defaultChannel": "stable"
  }
}
